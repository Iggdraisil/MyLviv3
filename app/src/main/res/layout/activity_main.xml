<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#00d5ef"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

<LinearLayout style="PseudoActionBarLayout"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/back_from_cafes"
        style="Arrow" />

    <TextView
        style="Title"
        android:text="Додати скаргу" />


    <ImageView
        android:id="@+id/horse_icon_from_cafes"
        style="SmallIcon" />
</LinearLayout>

    <ImageView
        android:paddingTop="16dp"
        android:id="@+id/ProblemPhoto"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:src="@drawable/yama" />

   <EditText
       android:id="@+id/ProblemCategory"
       android:layout_margin="8dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="40dp"
       android:paddingRight="40dp"
       android:gravity="center_horizontal"
       android:hint="Дорога"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <EditText
            android:id="@+id/ProblemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Городоцька 306"
            android:layout_weight="1"
            android:paddingLeft="16dp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/location_icon" />

    </LinearLayout>

    <EditText
        android:id="@+id/ProblemStatement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Коли поремонтують дороги від снігу
 на вулиці Городоцька: ні пройти, ні проїхати
, ми ж все таки залізничний р-н Львова, а не хутір!!!"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:text="Надіслати "
        android:background="#8AFFFFFF"/>

</LinearLayout>
</ScrollView>
